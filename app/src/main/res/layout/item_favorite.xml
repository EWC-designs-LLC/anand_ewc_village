<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/dragItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLogo"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="@dimen/_58sdp"
                android:background="@drawable/placeholder"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/ic_minus_delete"
                app:layout_constraintTop_toTopOf="@id/ivLogo"
                app:layout_constraintBottom_toBottomOf="@id/ivLogo"
                app:layout_constraintStart_toStartOf="@id/ivLogo"
                app:layout_constraintEnd_toEndOf="@id/ivLogo"
                android:visibility="gone"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHeading"
                style="@style/AppTextHeading"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Fisher Plantation"
                android:textAlignment="textStart"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintTop_toTopOf="@id/ivLogo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLocation"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="@id/tvHeading"
                app:layout_constraintTop_toBottomOf="@id/tvHeading" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAddress"
                style="@style/AppTextMedium"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="asdadada asdada asdasda asdadwed asdas dasda das d asd asd as da sd ad sad da sd das d asd asd as dscascea scef asda dasd as dad as dasd asd ada sda d s"
                android:textAlignment="textStart"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivLocation"
                app:layout_constraintTop_toBottomOf="@id/tvHeading" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLines"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_8sdp"
                android:background="@drawable/ic_lines"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/ivLogo"
                app:layout_constraintBottom_toBottomOf="@id/ivLogo"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/light_grey" />

    </LinearLayout>

</layout>